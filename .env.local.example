# The public URL of the site.
# Used for metadata, sitemaps, etc.
NEXT_PUBLIC_SITE_URL=http://localhost:3000

# The URL of the BaaS (Backend as a Service) API.
# This is the backend that the Next.js BFF will communicate with.
BAAS_API_URL=http://localhost:3000

# Secret token for cache revalidation API
# Generate a random string for production
REVALIDATE_SECRET=your-secret-token-here

# Default blog slug for public content
# This is the blog that will be shown on the public homepage
NEXT_PUBLIC_BLOG_SLUG=engineeringwithsebs
